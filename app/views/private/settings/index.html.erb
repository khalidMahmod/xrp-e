<table id="setting_list" class="table">
  <tr>
    <td class="col-xs-2 text-center vertical-center">
      <i class="fa fa-thumbs-o-up fa-2x"></i>
    </td>

    <td class="col-xs-15">
      <h4>
        <span><%= t('.verification.title') %></span>
        <i class="fa fa-bolt text-warning"></i>
      </h4>
      <p class="text-ignore"><%= t('.verification.description') %></p>
    <td class="col-xs-7 vertical-center">
      <% if current_user.id_document_verified? %>
        <a href="#" class="btn btn-success btn-block disabled" role="button">
          <i class="fa fa-check-circle"></i>
          <span><%= t('.verification.verified') %></span>
        </a>
      <% else %>
        <%= link_to t('.verification.go'), edit_id_document_path, class: 'btn btn-default btn-block' %>
      <% end %>
    </td>

  </tr>
  <tr>
    <td class="col-xs-2 text-center vertical-center">
      <%= image_tag '2FA_icons-03.png'%>
    </td>
    <td class="col-xs-15">
      <h4>2 Factor Authenticator</h4>
      <p class="text-ignore">Two-factor authentication provides another layer of security of your account.</p>
    </td>
    <td class="col-xs-7 vertical-center">
      <%= link_to "#{current_user.fa_enable? ? 'Disable' : 'Enable'}", new_member_mfa_session_path , class: (current_user.fa_enable? ? 'btn btn-danger btn-block' : 'btn btn-block btn-success') %>

    </td>
  </tr>
  <tr>
    <td class="col-xs-2 text-center vertical-center">
      <%= image_tag 'history.png' %>
    </td>
    <td class="col-xs-15">
      <h4>Login History</h4>
      <p class="text-ignore">You can see your sign-in history</p>
    </td>
    <td class="col-xs-7 vertical-center">
      <%= link_to t('.login_history'), login_histories_path, class: 'btn btn-default btn-block' %>
    </td>
  </tr>
  <tr>
    <td class="col-xs-2 text-center vertical-center">
      <%= image_tag 'api.png'%>
    </td>
    <td class="col-xs-15">
      <h4><%= t('.api_tokens.title') %></h4>
      <p class="text-ignore"><%= t('.api_tokens.description') %></p>
    </td>
    <td class="col-xs-7 vertical-center">
      <%= link_to t('.api_tokens.go'), api_tokens_path, class: 'btn btn-default btn-block' %>
    </td>
  </tr>
</table>

<% content_for :guide_title do %>
  <h3>
    <i class="fa fa-user"></i><span><%= current_user.email %></span>
  </h3>
  <% unless current_user.id_document_verified? %>
    <p class="alert alert-info">In order to protect your balance and personal information, we strongly suggest you please enable Two-Factor Authentication.</p>
  <% end %>
<% end %>

<% content_for :guide do %>
  <ul class="list-group">
    <% if current_user.admin? %>
      <span class="label label-warning">ADMIN</span>
    <% end %>
  </ul>
<% end %>
